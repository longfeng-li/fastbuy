<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div id='product_title'>
  <strong>Title:</strong>
  <%= @product.title %>
</title>

<div id='product_description'>
  <strong>Description:</strong>
  <%= sanitize(@product.description) %>
</div>

<div id='product_image'>
  <%= image_tag(@product.image_url) %>
  <!--%= button_to 'Add to Cart', line_items_path(product_id: @product, quantity: 1), remote: true, class: "product_button"  %-->
 
  <!--%= link_to 'Add to Cart', line_items_path(product_id: @product, quantity: 1), remote: true, method: :post, class: "product_button"  %-->
</div>

<br/>
<br/>

<div id='product_price'>
<% if @product.on_sale == false %>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
<% else %>
  <strong>Price:</strong>
  <s><%= number_to_currency(@product.price) %></s>
  <span class='sale_price'><%= number_to_currency(@product.sale_products.first.price) %></span>
<% end %>
</div>

<div id='product_rating'>
  <strong>Rating:</strong>
  <%= @product.rating %>
</div>

<div id= 'product_quantity'>
<% if @product.on_sale == false %>  
  <strong>Quantity:</strong>
  <%= @product.quantity %>
<% else %>
   <strong>Quantity:</strong>
   <%= @product.sale_products.first.quantity %>
<% end %>
</div>

<div id= 'product_button'>
<% if @product.on_sale == false %>
  <%= form_tag line_items_path(product_id: @product, price: @product.price), remote: true, class: "product_button" do %>
    <%= number_field_tag(:quantity, 1, in: 1..@product.quantity) %>
    <%= submit_tag("Add to Cart") %>
  <% end %>
<% else %>
  <%= form_tag line_items_path(product_id: @product,  price: @product.sale_products.first.price), remote: true, class: "product_button" do %>
    <%= number_field_tag(:quantity, 1, in: 1..@product.quantity) %>
    <%= submit_tag("Add to Cart") %>
  <% end %>
<% end %>
</div>

