//#START_HIGHLIGHT
if ($('#cart tr').length == 1) { $('#cart').show('blind', 1000); }

//#END_HIGHLIGHT
<% if @cart.class == Cart %>
 $('#cart').html("<%= escape_javascript render(@cart) %>");
<% else %>
 $('#cart').html("<%= escape_javascript render('carts/cart') %>");
<% end %>

<% if @current_item == 2 %>
  alert("Exceed the available quantity!")
<% else %>
  $('#current_item').css({'background-color':'#88ff88'}).
    animate({'background-color':'#ff6666'}, 1000);
<% end %>
