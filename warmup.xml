<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="54.84.57.80" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="90" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="10" unit="second">
      <users arrivalrate="3" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="10" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="10" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="20" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="6" duration="10" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="7" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="8" duration="10" unit="second">
      <users arrivalrate="3" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="User login and buy product" probability="80" type="ts_http"> 
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
           
      <!-- wait for up to 2 seconds, user is looking at products -->
      <thinktime value="2" random="true"></thinktime>
      
     <!-- create a random number to represent username -->
      <setdynvars sourcetype="random_number" start="1" end="500">
        <var name="username" />
      </setdynvars>
      <setdynvars sourcetype="random_number" start="1" end="20">
        <var name="provider" />
      </setdynvars>

      <!-- visit the login page -->
      <request>
        <http url="/buyers/sign_in" version="1.1" method="GET"></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out login information -->
      <thinktime value="2" random="true"></thinktime>
      
      <!-- Perform login -->
      <request subst="true">
        <http
          url='/buyers/sign_in'
          version='1.1'
          method='POST'
          contents='utf8=%E2%9C%93&amp;buyer%5Bemail%5D=%%_username%%%40%%_provider%%.com&amp;buyer%5Bpassword%5D=12345678&amp;buyer%5Bremember_me%5D=0&amp;commit=Log+in'
       >
        </http>
      </request>
 
      <!-- Find on sale products -->
      <request>
        <http url='/?search=on_sale' version='1.1' method='GET'></http>
      </request>     

      <!-- wait for up to 2 seconds, user is looking at products -->
      <thinktime value="2" random="true"></thinktime>

      <!-- View a product -->
      <setdynvars sourcetype="random_number" start="1" end="200">
        <var name="random_product1" />
      </setdynvars>
      <request subst="true">
        <http url='/products/%%_random_product1%%' version='1.1' method='GET'></http>
      </request>
      
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      
    </session>



    <session name="Seller create products" probability="10" type="ts_http">
      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- visit the login page -->
      <request>
        <http url="/sellers/sign_in" version="1.1" method="GET"></http>
      </request>
      
      <!-- create a random number to represent username -->
      <setdynvars sourcetype="random_number" start="1" end="500">
        <var name="username" />
      </setdynvars>
      <setdynvars sourcetype="random_number" start="1" end="20">
        <var name="provider" />
      </setdynvars>

      <!-- wait for up to 2 seconds, user is filling out login information -->
      <thinktime value="2" random="true"></thinktime>

      <!-- Perform login -->
      <request subst="true">
        <http
          url='/sellers/sign_in'
          version='1.1'
          method='POST'
          contents='utf8=%E2%9C%93&amp;seller%5Bemail%5D=%%_username%%%40%%_provider%%.com&amp;seller%5Bpassword%5D=12345678&amp;seller%5Bremember_me%5D=0&amp;commit=Log+in'>
        </http>
      </request>

      <!-- visit the products page -->
      <request>
        <http url="/products" version="1.1" method="GET"></http>
      </request>
      
       <!-- wait for up to 2 seconds, browse products -->
      <thinktime value="2" random="true"></thinktime>
      
      <!-- Now create product -->
      <request>
          <http url="/products/new" version="1.1" method="GET"></http>
      </request>

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
    </session>
    
    
    <session name="Seller put on sale products" probability="10" type="ts_http">
      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- visit the login page -->
      <request>
        <http url="/sellers/sign_in" version="1.1" method="GET"></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out login information -->
      <thinktime value="2" random="true"></thinktime>

      <!-- Perform login -->
      <request subst="true">
        <http
          url='/sellers/sign_in'
          version='1.1'
          method='POST'
          contents='utf8=%E2%9C%93&amp;seller%5Bemail%5D=seller%40g.com&amp;seller%5Bpassword%5D=12345678&amp;seller%5Bremember_me%5D=0&amp;commit=Log+in'>
        </http>
      </request>
      
      <!-- visit the products page -->
      <request>
        <http url="/products" version="1.1" method="GET"></http>
      </request>

      <!-- Now create product -->
      <request>
          <http url="/products/new" version="1.1" method="GET"></http>
      </request>


      <!-- pick a product randomly -->
      <setdynvars sourcetype="random_number" start="1001" end="10000">
        <var name="random_sale" />
      </setdynvars>
      
      <request subst="true">
        <http url='/sale_products/new?sale_product%5Bproduct_id%5D=%%_random_sale%%' version='1.1' method='GET'></http>
      </request>
      
      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
    </session>
  </sessions>
</tsung>
